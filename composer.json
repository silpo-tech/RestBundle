{
  "name": "silpo-tech/rest-bundle",
  "type": "symfony-bundle",
  "description": "Rest bundle for Symfony",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "symfony/serializer": "^7.2",
    "symfony/validator": "^7.2",
    "doctrine/collections": "^1.5",
    "silpo-tech/exception-handler-bundle": "^1.0",
    "silpo-tech/mapper-bundle": "^1.0",
    "silpo-tech/paginator-bundle": "^1.0",
    "mark-gerarts/automapper-plus-bundle": "^1.0",
    "php-solution/std-lib": "^1.0",
    "symfony/yaml": "^7.2",
    "symfony/property-info": "^7.2",
    "phpdocumentor/reflection-docblock": "^5.6"
  },
  "config": {
    "bin-dir": "bin",
    "symfony/runtime": true
  },
  "autoload": {
    "psr-4": {
      "RestBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RestBundle\\Tests\\": "tests/"
    }
  },
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "symfony/browser-kit": "^7.2",
    "symfony/framework-bundle": "^7.2",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "test:coverage": {
      "command": "APP_ENV=test php -d extension=pcov.so -d pcov.enabled=1 bin/phpunit --colors=never --coverage-clover reports/coverage/clover.xml --log-junit reports/junit.xml"
    },
    "test:run": [
      "APP_ENV=test php bin/phpunit --color=always"
    ]
  }
}
